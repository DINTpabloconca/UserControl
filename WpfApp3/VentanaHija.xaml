<Window x:Class="WpfApp3.VentanaHija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="VentanaHija" Height="450" Width="800" ShowInTaskbar="False" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="{Binding Path=Mensaje}"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button IsDefault="True" Click="Button_Click" Content="Aceptar"></Button>
            <Button IsCancel="True" Content="Cancelar"></Button>
        </StackPanel>
    </StackPanel>
</Window>
